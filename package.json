{
  "settings": {
    "titles": "center",
    "columns": 1,
    "suppress-empty-chords": true,
    "suppress-empty-lyrics": true,
    "inline-chords": false,
    "chords-under": false,
    "lyrics-only": false,
    "transpose": 0,
    "enharmonic-transpose": true,
    "chords-canonical": false,
    "choruslabels": true,
    "truesf": false
  },

  "pdf": {
    "fontconfig": {
      "serif": {
        "": "Times-Roman",
        "bold": "Times-Bold",
        "italic": "Times-Italic",
        "bolditalic": "Times-BoldItalic"
      },
      "sans": {
        "": "Helvetica",
        "bold": "Helvetica-Bold",
        "italic": "Helvetica-Oblique",
        "bolditalic": "Helvetica-BoldOblique"
      },
      "mono": {
        "": "Courier",
        "bold": "Courier-Bold",
        "italic": "Courier-Oblique",
        "bolditalic": "Courier-BoldOblique"
      }
    },

    "fonts": {
      "text": {
        "name": "serif",
        "size": 11
      },
      "chord": {
        "name": "sans",
        "size": 10
      },
      "comment": {
        "name": "italic",
        "size": 10
      },
      "title": {
        "name": "bold",
        "size": 14
      },
      "subtitle": {
        "name": "italic",
        "size": 12
      }
    }
  },

  "user": {
    "name": "Your Name",
    "fullname": "Your Full Name"
  }
}
